<!DOCTYPE html>
<html>
  <head>
    <title>ToDo_List_RubyGarage</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css" integrity="sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ" crossorigin="anonymous">
 
  </head>

  <body>
  
  
    <div class="navbar navbar-expand-lg navbar-light bg-light justify-content-between">
     <div><a class="navbar-brand" href="#">ToDoList</a></div>
     <div>
        
       <div class="navbar-nav">
        <% if user_signed_in? %>
            <span class="nav-item nav-link">Здравствуйте, <%= current_user.email %></span>
            <%= link_to "Выход", destroy_user_session_path, method: :delete, class: "nav-item nav-link text-dark" %>
        <% else %>
            <%= link_to "Вход", new_user_session_path, class: "nav-item nav-link" %>
            <%= link_to "Регистрация", new_user_registration_path, class: "nav-item nav-link" %>
        <% end %>
       </div>
     </div>
    </div>

    <%= yield %>
  
  </body>
</html>
